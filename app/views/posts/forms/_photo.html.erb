<div class="hidden type" id="photo">
  <% form_for @post, :url => @post.new_record? ? posts_url : post_url do |f| %>
    <div>
      <%= f.label :verb, "How did this make you feel?" %>
      I <%= f.text_field :verb %> this:
    </div>
    <div>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :path, "Link" %>
      <%= f.text_field :path %>
    </div>
    <div>
      <%= f.label :content, "A bit about the photo" %>
      <%= f.text_area :content %>
    </div>
    <%= hidden_field_tag 'post[type]', 'photo' %>
    <%= f.submit %>
  <% end %>
</div>