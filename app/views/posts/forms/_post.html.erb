<div class="hidden type" id="post">
  <% @post.verb = 'wrote' %>
  <% form_for @post, :url => @post.new_record? ? posts_url : post_url do |f| %>
    <div class="first">
      <%= f.text_area :content %>
    </div>
    <div>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>
    <div>
      I <%= f.text_field :verb %> this:
    </div>
    <%= save_buttons('post') %>
  <% end %>
</div>