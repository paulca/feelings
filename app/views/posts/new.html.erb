<div class="options">
  <ul>
    <li>Post:</li>
    <li><%= link_to 'Link', '#', :class => 'display link' %></li>
    <li><%= link_to 'Post', '#', :class => 'display post' %></li>
    <li><%= link_to 'Photo', '#', :class => 'display photo' %></li>
    <li><%= link_to 'Quote', '#', :class => 'display quote' %></li>
    <li><%= link_to 'View site...', '/' %></li>
  </ul>
</div>

<%= render :partial => 'posts/forms/link' %>

<%= render :partial => 'posts/forms/post' %>

<%= render :partial => 'posts/forms/photo' %>

<%= render :partial => 'posts/forms/quote' %>


<div id="posts">
  <table>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Content</th>
      <th>Published</th>
    </tr>

  <%- @posts.each do |post| -%>
    <tr>
      <td><%= post.type %></td>
      <td><%= post.title %></td>
      <td><%= link_to post.content[0,100] + ((post.content.size > 100) ? '...' : ''), edit_post_path(post.id) %></td>
      <td><%= post.published ? 'yes' : '' %></td>
      <td><%= link_to 'delete', post_path(post.id), :method => :delete, :confirm => 'Are you sure you want to delete this post?' %></td>
    </tr>
  <%- end -%>

  </table>
</div>